<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <About>
    <Summary>A basic agent to test with</Summary>
  </About>
  <ModSettings>
    <MsPerTick>50</MsPerTick>
  </ModSettings>
  <ServerSection>
      <ServerInitialConditions>
            <Time>
                <StartTime>1000</StartTime>
                <AllowPassageOfTime>false</AllowPassageOfTime>
           </Time>
           <Weather>clear</Weather>
            <AllowSpawning>false</AllowSpawning>
     </ServerInitialConditions>
    <ServerHandlers>
      <FlatWorldGenerator generatorString="3;7,2*3,1;1;village"/>
      <ServerQuitFromTimeUp timeLimitMs="10000"/>
      <ServerQuitWhenAnyAgentFinishes/>
    </ServerHandlers>
  </ServerSection>

  <AgentSection mode = "Survival">
    <Name>Agent 1</Name>
    <AgentStart>
      <Placement x="2.0" y="7.0" z="1.0"/>
      <Inventory>
        <InventoryItem slot="0" type="wool" colour="WHITE" quantity="1"/>
        <InventoryItem slot="5" type="wool" colour="RED" quantity="1"/>
        <InventoryItem slot="8" type="planks" variant="oak" quantity="1"/>
      </Inventory>
    </AgentStart>
    <AgentHandlers>
      <ObservationFromFullStats/>
      <ObservationFromFullInventory flat="false"/>
      <ObservationFromGrid>
        <Grid name="build" absoluteCoords="true">
          <min x="0" y="4" z="0"/>
          <max x="2" y="5" z="2"/>
        </Grid>
      </ObservationFromGrid>
      <MissionQuitCommands/>
      <InventoryCommands/>
      <AbsoluteMovementCommands/>
      <DiscreteMovementCommands/>
      <ChatCommands/>
    </AgentHandlers>
  </AgentSection>

  <AgentSection mode = "Survival">
    <Name>Agent 2</Name>
    <AgentStart>
      <Placement x="1.0" y="7.0" z="1.0"/>
    </AgentStart>
    <AgentHandlers>
      <ObservationFromFullStats/>
      <ObservationFromFullInventory flat="false"/>
      <ObservationFromGrid>
        <Grid name="build" absoluteCoords="true">
          <min x="0" y="4" z="0"/>
          <max x="2" y="5" z="2"/>
        </Grid>
      </ObservationFromGrid>
      <MissionQuitCommands/>
      <InventoryCommands/>
      <AbsoluteMovementCommands/>
      <DiscreteMovementCommands/>
      <ChatCommands/>
    </AgentHandlers>
  </AgentSection>
</Mission>